@import "./styles/iconfont.wxss";

/* 在微信小程序中不支持 通配符 '*'*/
page,
view,
text,
swiper,
swiper-item,
image,
navigator {
    padding: 0;
    margin: 0;
    background-origin: padding-box;
    box-sizing: border-box;
}

/* 
    主题颜色 通过变量来实现
    1 less 中存在 变量这个知识
    2 原生的css 和 wxss 也是支持这个变量
*/

page {
    /* 定义主题颜色 */
    --themeColor: #eb4450;
}
image {
    width: 100%;
}